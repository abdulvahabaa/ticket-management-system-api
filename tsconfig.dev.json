{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "dist",
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "./dist/**/*"],
  "include": [ "src/**/*", ".env" ]
}
